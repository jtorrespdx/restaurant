<html>
    <head>
        <title>Restaurantz</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class='container'>
            <h1>Restaurants in Portland</h1>

            <form action="/cuisines" method="post">
                <div class='form-group'>
                    <label for="type">Create new cuisine category:</label>
                    <input id="type" name="type" class='form-control' type="text">
                </div>
                <button type="submit" class='btn btn-info'>Add category</button>
            </form>

            <form action='/delete_cuisines' method='post'>
                <button type='submit' class='btn btn-danger'>Clear cuisines</button>
            </form>

            {% if cuisines is not empty %}
                <p>Here are all of your cuisines (click to add a restaurant):</p>
                <ul>
                    {% for cuisine in cuisines %}
                        <li><a href="/cuisines/{{ cuisine.getId }}">{{ cuisine.getType }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>There are no cuisines yet!</p>
            {% endif %}
        </div>
    </body>
</html>
